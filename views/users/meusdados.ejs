<% include ../template/cabecalho %>

<div class="col-lg-12 text-center">
	<h1 class="mt-5">Editar meus dados</h1>
</div>                
<div class="col-lg-12">
	<% include ../template/mensagens %>
</div>
<div class="col-lg-12" style="margin-top:20px;">
	<nav>
			<div class="nav nav-tabs" id="nav-tab" role="tablist">
			  <a class="nav-item nav-link active" id="nav-dados-tab" data-toggle="tab" href="#nav-dados" role="tab" aria-controls="nav-dados" aria-selected="true">Dados principais</a>
			  <a class="nav-item nav-link" id="nav-avatar-tab" data-toggle="tab" href="#nav-avatar" role="tab" aria-controls="nav-avatar" aria-selected="false">Meu avatar</a>
			  <a class="nav-item nav-link" id="nav-sec-tab" data-toggle="tab" href="#nav-sec" role="tab" aria-controls="nav-sec" aria-selected="false">Segurança</a>
			</div>
		  </nav>
<div class="tab-content" id="nav-tabContent">
<div class="tab-pane fade show active" id="nav-dados" role="tabpanel" aria-labelledby="nav-dados-tab">
<form method="post" action="/users/myaccount">
<input type="hidden" name="_method" value="put">
 <div class="form-row">
		<div class="form-group col-md-6">
		<label for="nome">Nome</label>
		<input type="text" class="form-control" id="nome" name="nome" placeholder="Informe o nome do usuário" required value="<%= usuario.nome %>">
		</div>

	   <div class="form-group col-md-6">
		<label for="email">E-mail</label>
		<input type="email" class="form-control" id="email" name="email" placeholder="Informe um e-mail válido" required value="<%= usuario.email %>"> 
		</div>                                                            
</div>
<button type="submit" class="btn btn-primary" onclick="return confirm('Confirma alteração de dados?');">Salvar</button>
</form> 
</div>
<div class="tab-pane fade" id="nav-avatar" role="tabpanel" aria-labelledby="nav-avatar-tab">
<form method="post" action="/users/avatar" enctype="multipart/form-data">

 <div class="form-row">
		 <div class="form-group col-md-5">
		<label for="foto">Alterar avatar</label>
		<input type="file" class="form-control" id="foto" name="foto" aria-describedby="avatarHelp" required> 
		<small id="avatarHelp" class="form-text text-muted">Envie uma imagem .jpg ou .png de até 1MB.</small>
		</div>    
		
		<div class="form-group col-md-7">
		<label for="fotoatual">Meu avatar atual</label>
		<img src="/uploads/anonimo.jpg" style=" width: 80%; min-height: 500px; max-height: 500px;" class="form-control" id="fotoatual" />
		</div>                                                        
</div>
<button type="submit" class="btn btn-primary" onclick="return confirm('Confirma alteração da foto de perfil (avatar)?');">Salvar</button>
</form> 

</div>
<div class="tab-pane fade" id="nav-sec" role="tabpanel" aria-labelledby="nav-sec-tab">
<form method="post" action="/users/password">
<input type="hidden" name="_method" value="put">
 <div class="form-row">
		<div class="form-group col-md-4">
		<label for="senha">Senha</label>
		<input type="password" class="form-control" id="senha" name="senha" placeholder="Informe sua senha atual" required>
		</div>

	   <div class="form-group col-md-4">
		<label for="novasenha">Nova senha</label>
		<input type="password" class="form-control" id="novasenha" name="novasenha" placeholder="Informe sua nova senha" required>
		</div>   
		
		<div class="form-group col-md-4">
		<label for="confsenha">Confirme sua senha</label>
		<input type="password" class="form-control" id="confsenha" name="confsenha" placeholder="Confirme sua senha" required>
		</div>
</div>
<button type="submit" class="btn btn-primary" onclick="return confirm('Confirma alteração de senha?');">Salvar</button>
</form> 
</div>
</div>
	
</div>

